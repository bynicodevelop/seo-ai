{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "init": "npm i && npm i --prefix functions",
    "clean": "rm -rf .nuxt .output node_modules functions/node_modules functions/lib",
    "dev": "npm-run-all --parallel build:functions:watch dev:nuxt firebase:start",
    "firebase:start": "firebase emulators:start",
    "build:nuxt": "nuxt build",
    "build:nuxt:watch": "nuxt build --watch",
    "build:functions": "tsc --project functions",
    "build:functions:watch": "tsc --project functions --watch",
    "dev:nuxt": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@nuxt/image": "^1.7.0",
    "@nuxtjs/i18n": "^8.3.1",
    "@nuxtjs/mdc": "^0.8.3",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "firebase-admin": "^12.2.0",
    "firebase-functions": "^5.0.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nuxt": "^3.12.3",
    "vue": "latest"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.6"
  }
}